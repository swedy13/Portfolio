// ---- MOBILE ---- //
.hero
  position relative
  height 100vh
  border none

  .content
    z-index 100
    display flex
    align-items center
    justify-content center
    position absolute
    top 0
    height 100vh
    width 100vw
    max-width 100%

    .center
      text-align center

      h1, h3
        margin 0
        color white
        text-shadow 0 1px 5px #777

      h1
        font-family Otto
        font-size 7.5em
        font-weight 400
        line-height .6

      h3
        padding .5em 0 2em
        font-size 1.5em
        font-weight 300

      img
        position absolute
        bottom 30px
        left calc(50% - 1.25em)
        height 3.5em
        width 3.5em

  // ---- Video ---- //
  .video
    display flex
    align-items center
    justify-content center
    max-height 100%
    overflow hidden
    background-color #000

  .no-video .video video,
  .touch .video video
    display none

  .no-video .video .poster,
  .touch .video .poster
    display block !important

