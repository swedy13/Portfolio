// ---- LARGE MOBILE ---- //
@media screen and (min-width: 668px) and (max-width: 773px)
  .hero
    .content
      .center
        h1
          font-size 8.5em

        h3
          font-size 1.65em


@media screen and (min-width: 774px)
  .hero
    .content
      .center
        h1
          margin-bottom -.15em
          font-size 13em
          font-weight 400

        h3
          margin-top -.15em
          padding-bottom 5em
          font-size 2.5em
          font-weight 300

        img
          position absolute
          bottom 3.5em
          height 3.5em
          width 3.5em


