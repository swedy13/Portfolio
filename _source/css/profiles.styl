.profiles
  display flex
  flex-wrap no-wrap

  .quora, .linkedin, .github, .upwork
    display flex
    align-content space-around
    justify-content center
    flex-wrap wrap
    padding 15px
    text-align center
    transition .25s

  .quora
    background-color #b92b27

  .linkedin
    background-color #0077b5

  .github
    background-color #333

  .upwork
    background-color #37a000

  .quora, .linkedin, .github, .upwork
    .content
      padding 15px

      a, p
        color white

  .logo,
  .content,
  .link
    width 85%

  .link
    button
       padding 8px 24px
       background-color white
       outline none
       border-radius 3px
       border none
       color #555
       font-size .95em
       font-weight 700

       &:hover
         text-decoration underline


// ---- PORTRAIT ---- //
// Mobile
@media screen and (orientation: portrait) and (max-width: 767px)
  .profiles
    flex-wrap wrap

    .quora, .linkedin, .github, .upwork
      height calc(50vh - 30px)
      width calc(100vw - 30px)

      .logo
        img
          max-width 80%

// Tablet
@media screen and (orientation: portrait) and (min-width: 768px)
  .profiles
    flex-wrap wrap

    .quora, .linkedin, .github, .upwork
      height calc(40vh - 30px)
      width calc(50vw - 30px)
      max-width calc(50% - 30px)

      .logo
        img
          max-width 80%


// ---- LANDSCAPE ---- //
// Mobile
@media screen and (orientation: landscape) and (max-width: 773px)
  .profiles
    flex 0 1 auto
    flex-wrap wrap

    .quora, .linkedin, .github, .upwork
      height calc(100vh - 30px)
      width calc(50vw - 30px)
      max-width 50%

      .logo
        img
          max-width 90%

// Tabet
@media screen and (orientation: landscape) and (min-width: 774px)
  .profiles
    flex-wrap no-wrap

    .quora, .linkedin, .github, .upwork
      height calc(40vh - 30px)
      width calc(25vw - 30px)

      .logo
        img
          max-width 90%